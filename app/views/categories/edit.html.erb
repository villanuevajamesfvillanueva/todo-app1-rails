<div class='container'>
    <%= form_with scope: :category, url: category_path, method: :put, local: true do |f| %>
    <%# url attr is where the user is redirected once the form is submitted
    url: use alias for value; you can view aliases by issuing the command:
    rails routes outside rails console %>

    <div>
        <% if @category.errors.any? %>
        <ul>
            <% @category.errors.full_messages.each do |msg| %>
                <li class="alert alert-danger" role="alert" ><%= msg %></li>
            <% end %>
        </ul>
        <% end %>
    </div>


    <div>
        <%= f.label :name %>
        <%= f.text_field :name %>
    </div>

    <div>
        <%= f.label :user_id %>
        <%= f.text_field :user_id, value: current_user.id %>
    </div>

    <div>
        <%= f.submit :Update, class: 'btn btn-primary' %>
    </div>

    <% end %>
</div>