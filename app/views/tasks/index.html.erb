<div class="table table-responsive-lg">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Body</th>
                <th scope="col">Deadline</th>
                <th scope="col">UUID</th>
                <th scope="col">Categ_UUID</th>
                <th scope="col">Categ_name</th>
            </tr>
        </thead>
        <tbody>
            <% @tasks.each do |task| %>
                <tr>
                    <td scope="row"><%= task.title%></td>
                    <td><%= task.body%></td>
                    <td><%= task.deadline%></td>
                    <td><%= task.id%></td>
                    <td><%= task.category_id%></td>
                    <% c = @categories.to_a.map(&:serializable_hash) %>
                    <% c.each do |categ| %>
                        <% if (categ['id'] == task.category_id) %>
                            <td><%= categ['name']%></td>
                        <% end %>   
                    <% end %>
                    <td><%= link_to "View", task %></td>
                    <td><%= link_to "Edit", edit_task_path(task) %></td>
                    <td><%= link_to "Delete", task, method: :delete, data: { confirm: "Are you sure?" } %></td>
                </tr>
            <% end %>
        </tbody>
    </table>
</div>
<br>
<%= link_to "New task", new_task_path %>